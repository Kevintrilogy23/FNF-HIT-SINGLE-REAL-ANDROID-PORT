<?xml version="1.0" encoding="utf-8"?>
<project>
	<app title="Nightmare Vision" file="NightmareVision" packageName="com.shadowmario.psychengine073" package="com.shadowmario.psychengine073" main="Main" version="0.2.8" company="ShadowMario" />

	<set name="APP_ID" value="0x0100f6c013bbc000" />
	<haxedef name="LINC_LUA_RELATIVE_DYNAMIC_LIB"/> 
	<app preloader="flixel.system.FlxPreloader" />
	<set name="SWF_VERSION" value="11.8" />
	
	<define name="MODS_ALLOWED" if="desktop" />
	<define name="HSCRIPT_ALLOWED" if="desktop || mobile" />
	<define name="LUA_ALLOWED" if="desktop || mobile" />
	<define name="VIDEOS_ALLOWED" if="windows || linux || android" unless="32bits"/>
	<define name="ACHIEVEMENTS_ALLOWED" />
	<define name="DISCORD_ALLOWED" unless="mobile" />

	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false"/>
	<window if="mobile" orientation="landscape" fullscreen="true" resizable="false" />

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<classpath name="source" />

	<define name="CRASH_HANDLER" if="release" />

	<assets path="assets/fonts" embed="true" />
	<assets path="assets/shared" embed="true" exclude="*.mp3" unless="web"/>
	<assets path="assets/videos" embed="true" library="videos" if="VIDEOS_ALLOWED"/>
	<assets path="assets/songs" embed="true" library="songs" exclude="*.mp3" unless="web"/>
	<assets path="assets/week_assets" embed="true" library="week_assets" rename="assets" exclude="*.mp3" unless="web"/>

	<haxelib name="flixel" />
	<haxelib name="flixel-ui" />
	<haxelib name="flixel-addons" />
	<haxelib name="tjson" />
	<haxelib name="linc_luajit" if="LUA_ALLOWED"/>
	<haxelib name="SScript" if="HSCRIPT_ALLOWED"/>
	<haxelib name="hscript-iris" />
	<haxelib name="hxvlc" if="VIDEOS_ALLOWED"/>
	<haxelib name="flxanimate"/>
	<haxelib name="extension-androidtools" if="android"/>

	<section if="android">
		<config:android permission="android.permission.VIBRATE" />
		<config:android permission="android.permission.INTERNET" />
		
		<android target-sdk-version="34" />
		<android min-sdk-version="21" />
		<certificate path="key.keystore" password="psychport" alias="psychport" alias-password="psychport" unless="test" />
    </section>
	
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name='no-deprecation-warnings' />

	<icon path="art/icon16.png" size='16'/>
	<icon path="art/icon32.png" size='32'/>
	<icon path="art/icon64.png" size='64'/>
	<icon path="art/iconOG.png" />
</project>
